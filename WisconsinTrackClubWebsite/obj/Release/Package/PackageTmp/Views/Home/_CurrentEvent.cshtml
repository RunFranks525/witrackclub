@model WisconsinTrackClubWebsite.Models.ViewModels.AdminInterfaceViewModel
@using (Ajax.BeginForm("publishCurrentEvent", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "CurrentEventDiv", OnSuccess = "publishCurrentEventSuccess" }))
{
    @Html.AntiForgeryToken()
<div id="CurrentEventDiv">
<h3 id="section-4">Current Event</h3>
<h4>Update the Current Event to be featured on the Home Page</h4>

<div class="row">
    <div class="form-group">
        @Html.LabelFor(model => model.Information.UpdateTitle, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("updateTitle", Model.Information.UpdateTitle, new { @class = "form-control" } )
            @Html.ValidationMessageFor(model => model.Information.UpdateTitle, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <br />
    <div class="form-group">
        @Html.LabelFor(model => model.Information.Info, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextArea("info", Model.Information.Info, new { @class = "form-control info_box" } )
            @Html.ValidationMessageFor(model => model.Information.Info, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <br />
    <div class="form-group">
        @Html.LabelFor(model => model.Information.Importance, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <span class="radioButton">Nope </span>@Html.RadioButton("importance", Model.Information.Importance, false, new { htmlAttributes = new { @class = "form-control" } })
            <span class="radioButton">Yep! </span>@Html.RadioButton("importance", Model.Information.Importance, true, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Information.Importance, "", new { @class = "text-danger" })
        </div>
    </div>
</div>
<div class="form-group">
    <input type="submit" value="Submit" class="btn btn-danger" />

</div>

    <div>
        <p>@Model.ErrorMessage</p>
    </div>

</div>
}

