@model IEnumerable<WisconsinTrackClubWebsite.Models.Race>

@{
    ViewBag.Title = "CurrentSchedule";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-11 information">
            <h2>Current Schedule</h2>
            <h3>Track and Field 2016</h3>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Event</th>
                        <th>Location</th>

                        <th class="hidden-xs">Results</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int counter = 0;
                        foreach (var item in Model)
                        {
                            if (item.Date > System.DateTime.Now && counter == 0)
                            {
                                <tr class="alert alert-danger">
                                    <td>@item.Date.ToShortDateString()</td>
                                    <td>@Html.DisplayFor(modelItem => item.RaceName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Location)</td>
                                </tr>
                                counter++;
                            }
                            else
                            {
                                <tr>
                                    <td>@item.Date.ToShortDateString()</td>
                                    <td>@Html.DisplayFor(modelItem => item.RaceName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Location)</td>
                                </tr>
                            }
                        }
}
                    
   
                </tbody>
            </table>
            <p><small>* denotes indoor meet</small></p>
            <ul>
                <li>Red and White Meet will have limited entry</li>
                <li>Currently organizing to plan a home meet for one of the last two weeks in April</li>
            </ul>
        </div>
    </div>
</div>
